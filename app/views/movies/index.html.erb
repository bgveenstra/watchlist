<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to 'Show', user_list_movie_path(@user, @list, movie.id) %></td>
        <td><%= link_to 'Edit', edit_user_list_movie_path(@user, @list, movie.id) %></td>
        <td><%= link_to 'Destroy', user_list_movie_path(@user, @list, movie), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_user_list_movie_path %>
