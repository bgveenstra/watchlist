<div class="container">
  <div class="row">
    <div class="col-md-6" id="tutorial">
      <%= image_tag("flickd_home.png") %>
    </div>


    <div class="col-md-6 float-right" id="signup">
      <h1>Get Started!</h1>
      <br>
      <%= devise_error_messages! %>
      <div class="form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, placeholder: "Email...", autofocus: true %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <%= f.password_field :password, placeholder: "Password...", autocomplete: "off" %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password...", autocomplete: "off" %>
          </div>

          <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Sign Up
          </a>
          <div class="collapse" id="collapseExample">
            <div class="field">
              <div class="field">
              <%= f.text_field :name, placeholder: "Name..." %>
            </div>

            <div class="field">
              <%= f.text_field :zip, placeholder: "Zip..." %>
            </div>
            <div class="actions">
              <%= f.submit "Continue" %>
            </div>
            <% end %>
          </div>
      </div>
    </div>
</div>

  <div class="row">
    <div class="col-md-12">
      <h3 id="title">How It Works</h3>
      <div class="row" id="bubbles">
        <div class="col-md-4">
          <img src="https://filetrack.com/design/assets/img/icons/users.png">
        </div>
        <div class="col-md-4">
          <img src="http://www.tulsainternetmarketingservice.com/wp-content/uploads/2014/08/Responsive-Design21-250x250.png">
        </div>
        <div class="col-md-4">
          <img src="https://www.lightspeed-tek.com/lightspeed/assets/Image/Flexcat-Icon-Small-Group-Sharing-250x250.png">
        </div>
      </div>
    </div>
  </div>

</div>

<div class="footer">
</div>
